@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TAS Admin</title>
    
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/Account.css" />
</head>
<body class="account-page">
    <div class="account-container">
        <div class="account-card">
            <div class="account-header">
                <div class="logo">
                    <i class="fas fa-lock"></i>
                </div>
                <h2>Đặt lại mật khẩu</h2>
                <p>Nhập mật khẩu mới cho tài khoản của bạn</p>
            </div>

            <div class="account-body">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle"></i>
                        @TempData["Error"]
                    </div>
                    <a href="@Url.Action("ForgotPassword", "Account")" class="btn btn-custom-tas btn-block">
                        <i class="fas fa-arrow-left"></i>
                        Yêu cầu link mới
                    </a>
                }
                else
                {
                    <form id="resetPasswordForm" asp-action="ResetPassword" asp-controller="Account" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="email" value="@ViewBag.Email" />
                        <input type="hidden" name="token" value="@ViewBag.Token" />

                        <div class="form-group">
                            <label for="newPassword">
                                <i class="fas fa-key"></i>
                                Mật khẩu mới
                            </label>
                            <div class="password-wrapper">
                                <input type="password" 
                                       class="form-control" 
                                       id="newPassword" 
                                       name="newPassword" 
                                       placeholder="Nhập mật khẩu mới"
                                       required 
                                       autofocus 
                                       minlength="6" />
                                <button type="button" class="btn-toggle-password" onclick="togglePassword('newPassword')">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <small class="form-text text-muted">
                                Mật khẩu phải có ít nhất 6 ký tự
                            </small>
                        </div>

                        <div class="form-group">
                            <label for="confirmPassword">
                                <i class="fas fa-check-circle"></i>
                                Xác nhận mật khẩu
                            </label>
                            <div class="password-wrapper">
                                <input type="password" 
                                       class="form-control" 
                                       id="confirmPassword" 
                                       name="confirmPassword" 
                                       placeholder="Nhập lại mật khẩu mới"
                                       required 
                                       minlength="6" />
                                <button type="button" class="btn-toggle-password" onclick="togglePassword('confirmPassword')">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Password Strength Indicator -->
                        <div class="password-strength" id="passwordStrength" style="display:none;">
                            <div class="strength-bar">
                                <div class="strength-fill" id="strengthFill"></div>
                            </div>
                            <small id="strengthText"></small>
                        </div>

                        <div class="alert alert-danger" id="errorMessage" style="display:none;"></div>
                        <div class="alert alert-success" id="successMessage" style="display:none;"></div>

                        <button type="submit" class="btn btn-custom-tas-action btn-block" id="btnSubmit">
                            <i class="fas fa-check"></i>
                            Đặt lại mật khẩu
                        </button>

                        <a href="@Url.Action("Login", "Account")" class="btn btn-custom-tas btn-block">
                            <i class="fas fa-arrow-left"></i>
                            Quay lại đăng nhập
                        </a>
                    </form>
                }
            </div>

            <div class="account-footer">
                <p>&copy; 2024 TAS Admin. All rights reserved.</p>
            </div>
        </div>

        <!-- Background Animation -->
        <div class="bg-animation">
            <div class="leaf leaf-1"></div>
            <div class="leaf leaf-2"></div>
            <div class="leaf leaf-3"></div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JS -->
    <script src="~/js/Account.js"></script>
    
    <script>
        $(document).ready(function() {
            initResetPasswordPage();
        });
    </script>
</body>
</html>
