@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TAS Admin</title>
    
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/Account.css" />
</head>
<body class="account-page">
    <div class="account-container">
        <div class="account-card">
            <div class="account-header">
                <div class="logo">
                    <i class="fas fa-key"></i>
                </div>
                <h2>Quên mật khẩu</h2>
                <p>Nhập email hoặc tên đăng nhập để nhận link đặt lại mật khẩu</p>
            </div>

            <div class="account-body">
                <form id="forgotPasswordForm" asp-action="ForgotPassword" asp-controller="Account" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="emailOrUsername">
                            <i class="fas fa-envelope"></i>
                            Email hoặc Tên đăng nhập
                        </label>
                        <input type="text" 
                               class="form-control" 
                               id="emailOrUsername" 
                               name="emailOrUsername" 
                               placeholder="Nhập email hoặc tên đăng nhập"
                               required 
                               autofocus />
                    </div>

                    <div class="alert alert-danger" id="errorMessage" style="display:none;"></div>
                    <div class="alert alert-success" id="successMessage" style="display:none;"></div>

                    <button type="submit" class="btn btn-custom-tas-action btn-block" id="btnSubmit">
                        <i class="fas fa-paper-plane"></i>
                        Gửi link đặt lại mật khẩu
                    </button>

                    <a href="@Url.Action("Login", "Account")" class="btn btn-secondary btn-block">
                        <i class="fas fa-arrow-left"></i>
                        Quay lại đăng nhập
                    </a>
                </form>
            </div>

            <div class="account-footer">
                <p>&copy; 2024 TAS Admin. All rights reserved.</p>
            </div>
        </div>

        <!-- Background Animation -->
        <div class="bg-animation">
            <div class="leaf leaf-1"></div>
            <div class="leaf leaf-2"></div>
            <div class="leaf leaf-3"></div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JS -->
    <script src="~/js/Account.js"></script>
    
    <script>
        $(document).ready(function() {
            initForgotPasswordPage();
        });
    </script>
</body>
</html>
