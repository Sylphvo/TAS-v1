@using TAS.Models;
@model UserAccountRequest
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_Auth.cshtml";
    var returnUrl = (string?)ViewData["ReturnUrl"];
}
@section Style {
    <link rel="stylesheet" href="../Contents/css/Account/Account.css">
}
<!-- [ Pre-loader ] End -->
<div class="auth-main">
    <div class="auth-wrapper v1">
        <div class="auth-form">
            <div class="card my-5">
                <div class="card-body">
                    <div class="text-center">
                        <a href="#"><img src="../Logo/LogoBlack.png" alt="img" width="150"></a>
                    </div>
                    <h4 class="text-center f-w-500 mb-3" data-i18n="key_loginemail"></h4>
                    <form asp-action="Login" method="post">
                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                            <input type="text" class="form-control" name="UserName" id="floatingInput"
                                placeholder="UserName" required>
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" name="Password" id="floatingInput1"
                                placeholder="Mật khẩu" required>
                        </div>
                        <div class="d-flex mt-1 justify-content-end align-items-center">
                            <h6 class="text-secondary f-w-400 mb-0">
                                <a href="forgot-password-v1.html" data-i18n="key_quenmatkhau"></a>
                            </h6>
                        </div>
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary" data-i18n="key_login"></button>
                        </div>
                        <div class="d-flex justify-content-between align-items-end mt-4">
                            <h6 class="f-w-500 mb-0" data-i18n="key_chuacotaikhoan"></h6>
                            <a asp-controller="Account" asp-action="Register" class="link-primary"
                                data-i18n="key_taotaikhoan"></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>