@{
    var ListAgent = ViewBag.ComboAgent;
}
<div class="modal fade bd-example-modal-lg" id="AddNewRubberFarm" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm mới thông tin nhà vườn</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <!-- [ form-element ] start -->
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label class="form-label">Mã đại lý: *</label>
                                    <select id="ListCboAgentCode" class="form-select form-control"></select>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3 pe-2">
                                    <label class="form-label">Mã nhà vườn: *</label>
                                    <input type="text" class="form-control p-2" placeholder="Mã nhà vườn" id="FarmCode">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3 pe-2">
                                    <label class="form-label">Tên nhà vườn: *</label>
                                    <input type="text" class="form-control p-2" placeholder="Tên nhà vườn" id="FarmerName">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3 pe-2">
                                    <label class="form-label">Số điện thoại</label>
                                    <input type="text" class="form-control p-2" placeholder="nhập số điện thoại" id="FarmPhone">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label class="form-label">Địa chỉ</label>
                                    <input type="text" class="form-control p-2" placeholder="nhập địa chỉ" id="FarmAddress">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label class="form-label">Tổng diện tích</label>
                                    <input type="number" class="form-control p-2" placeholder="nhập tổng diện tích" id="TotalAreaHa">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3 pe-2">
                                    <label class="form-label">Diện tích</label>
                                    <input type="number" class="form-control p-2" placeholder="nhập diện tích" id="RubberAreaHa">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label class="form-label">Tổng khai thác</label>
                                    <input type="number" class="form-control p-2" placeholder="nhập khai thác" id="TotalExploit">
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- [ form-element ] end -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" data-i18n="key_close"></button>
                <button type="button" class="btn btn-success" data-bs-dismiss="modal" onclick="UpdateDataAfterEdit(1)" data-i18n="key_save">Save</button>
            </div>
        </div>
    </div>
</div>