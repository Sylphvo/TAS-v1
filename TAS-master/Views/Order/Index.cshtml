@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Style {
    @* <link rel="stylesheet" href="../Contents/css/RubberGarden/RubberGarden.css"> *@
}
<div class="RubberIntake-page">
    <div class="row">
        <div class="col-xl-12">
            <div class="card table-card">
                <div class="card-body">
                    <!-- ========================================
                         TOOLBAR
                    ======================================== -->
                    <div class="datatable-top " style="justify-content:flex-end">
                        <!-- Left side: Filters -->
                        <div class="button_filter">
                        </div>

                        <!-- Right side: Actions -->
                        <div class="datatable-actions">
                            <button type="button" id="btnAdd" class="btn btn-success btn-sm">
                                <i class="fas fa-plus"></i> Thêm mới
                            </button>
                            <button type="button" id="btnRefresh" class="btn btn-secondary btn-sm">
                                <i class="fas fa-sync-alt"></i> Làm mới
                            </button>
                        </div>
                    </div>

                    <!-- ========================================
                         AG-GRID TABLE
                    ======================================== -->
                    <div id="orderGrid" class="ag-theme-alpine" style="height: 600px; width: 100%;"></div>
                    <div id="ag-paging-footer" class="ag-paging-button-wrapper"></div>
                    <!-- ========================================
                         HIDDEN FILE INPUT
                    ======================================== -->
                    <input type="file" id="fileImport" accept=".xlsx,.xls" style="display:none;" onchange="handleFileImport(event)" />
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal: Add/Edit Order -->
<div id="modalOrder" class="modal">
    <div class="modal-content modal-lg">
        <div class="modal-header">
            <h2 id="modalTitle">Thêm đơn hàng mới</h2>
            <button class="btn-close" onclick="closeModal()">&times;</button>
        </div>
        <div class="modal-body">
            <form id="orderForm">
                <input type="hidden" id="orderId" />

                <div class="form-row">
                    <div class="form-group">
                        <label for="agentId">
                            Đại lý <span class="required">*</span>
                        </label>
                        <select id="agentId" class="form-control" required>
                            <option value="">-- Chọn đại lý --</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="orderDate">
                            Ngày đặt hàng <span class="required">*</span>
                        </label>
                        <input type="date" id="orderDate" class="form-control" required />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="customerName">
                            Tên khách hàng
                        </label>
                        <input type="text" id="customerName" class="form-control" maxlength="255" />
                    </div>
                    <div class="form-group">
                        <label for="shipmentMethod">
                            Phương thức vận chuyển
                        </label>
                        <select id="shipmentMethod" class="form-control">
                            <option value="">-- Chọn phương thức --</option>
                            <option value="Đường bộ">Đường bộ</option>
                            <option value="Đường biển">Đường biển</option>
                            <option value="Đường hàng không">Đường hàng không</option>
                            <option value="Container">Container</option>
                            <option value="Khác">Khác</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="totalNetKg">
                            Tổng khối lượng Net (kg)
                        </label>
                        <input type="number" id="totalNetKg" class="form-control" step="0.01" min="0" />
                    </div>
                </div>

                <div class="form-group full-width">
                    <label for="notes">
                        Ghi chú
                    </label>
                    <textarea id="notes" class="form-control" rows="3" maxlength="500"></textarea>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeModal()">
                Hủy
            </button>
            <button class="btn btn-primary" id="btnSave">
                Lưu
            </button>
        </div>
    </div>
</div>

<!-- ========================================
     SCRIPTS
======================================== -->
@section Scripts {
    <!-- AG Grid -->
    <script src="https://cdn.jsdelivr.net/npm/ag-grid-community@31.0.0/dist/ag-grid-community.min.js"></script>

    <!-- SheetJS for Excel -->
    <script src="https://cdn.sheetjs.com/xlsx-0.20.1/package/dist/xlsx.full.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Contents/js/Order/Order.js"></script>
    <script>
        var agPaging = 'ag-paging-footer';
        var IsOptionAll = false;
        // ========================================
        // INITIALIZATION
        // ========================================
        initOrderPage();
    </script>
}

@section Styles {
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Contents/css/Order.css" />
}