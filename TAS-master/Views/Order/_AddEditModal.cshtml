<!-- Modal: Add/Edit Order -->
<div id="modalOrder" class="modal">
    <div class="modal-content modal-lg">
        <div class="modal-header">
            <h2 id="modalTitle">Thêm đơn hàng mới</h2>
            <button class="btn-close" onclick="closeModal()">&times;</button>
        </div>
        <div class="modal-body">
            <form id="orderForm">
                <input type="hidden" id="orderId" />

                <div class="form-row">
                    <div class="form-group">
                        <label for="agentId">
                            Đại lý <span class="required">*</span>
                        </label>
                        <select id="agentId" class="form-control" required>
                            <option value="">-- Chọn đại lý --</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="orderDate">
                            Ngày đặt hàng <span class="required">*</span>
                        </label>
                        <input type="date" id="orderDate" class="form-control" required />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="customerName">
                            Tên khách hàng
                        </label>
                        <input type="text" id="customerName" class="form-control" maxlength="255" />
                    </div>
                    <div class="form-group">
                        <label for="shipmentMethod">
                            Phương thức vận chuyển
                        </label>
                        <select id="shipmentMethod" class="form-control">
                            <option value="">-- Chọn phương thức --</option>
                            <option value="Đường bộ">Đường bộ</option>
                            <option value="Đường biển">Đường biển</option>
                            <option value="Đường hàng không">Đường hàng không</option>
                            <option value="Container">Container</option>
                            <option value="Khác">Khác</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="totalNetKg">
                            Tổng khối lượng Net (kg)
                        </label>
                        <input type="number" id="totalNetKg" class="form-control" step="0.01" min="0" />
                    </div>
                </div>

                <div class="form-group full-width">
                    <label for="notes">
                        Ghi chú
                    </label>
                    <textarea id="notes" class="form-control" rows="3" maxlength="500"></textarea>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeModal()">
                Hủy
            </button>
            <button class="btn btn-primary" id="btnSave">
                Lưu
            </button>
        </div>
    </div>
</div>
