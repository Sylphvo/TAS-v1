                <div class="row">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h3 id="statTotalFarms">0</h3>
                                <p>Tổng số vườn</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h3 id="statActiveFarms">0</h3>
                                <p>Đã duyệt</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body text-center">
                                <h3 id="statInactiveFarms">0</h3>
                                <p>Chưa duyệt</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
