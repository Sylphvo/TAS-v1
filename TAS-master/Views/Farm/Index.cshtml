@section Style {
    <link rel="stylesheet" href="../Contents/css/Farm/Farm.css">
}

<div class="row">
    <div class="col-12">
        <div class="card table-card">
            <div class="card-header">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                                
                    </div>
                    <div class="d-flex">
                        <!-- Nút chọn file -->
                        <label for="importExcel" class="btn btn-primary"><i class="ti ti-upload f-20"></i>&nbsp; <span data-i18n="key_importexcel"></span></label>
                        <input type="file" id="importExcel" hidden>
                        <span id="file-name" class="ms-2 d-none"></span>
                        @* <button onclick="onExportTemplateExcel()" class="btn btn-primary buttonSearch"><i class="ti ti-file-x f-20"></i>&nbsp; Mẫu Excel Polygon</button> *@
                        <button class="btn btn-primary buttonSearch" data-bs-toggle="modal" data-bs-target="#AddNewRubberFarm"><i class="ti ti-plus f-20"></i>&nbsp;  <span data-i18n="key_themmoi"></span></button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <div class="datatable-top">
                        <div class="datatable-dropdown">
                            <label>
                                <span data-i18n="key_rowperpage"></span>:
                                <select class="datatable-selector selector-paging" name="per-page">
                                    <option value="5">5</option>
                                    <option value="10" selected>10</option>
                                    <option value="15">15</option>
                                    <option value="20">20</option>
                                    <option value="25">25</option>
                                </select>
                            </label>
                        </div>
                        <div>
                            <label></label>
                        </div>
                    </div>
                    <!-- [ Main Content ] end -->
                    <div id="farmGrid" style="height: 500px;width:100%" class="ag-theme-alpine"></div>
                    <div id="ag-paging-footer" class="ag-paging-button-wrapper"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add/Edit Modal -->
<div class="modal fade" id="farmModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Thêm nhà vườn</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="farmForm">
                    <input type="hidden" id="farmId">

                    <!-- Row 1: Basic Info -->
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Mã nhà vườn <span class="text-danger">*</span></label>
                                <input type="text" id="farmCode" class="form-control" required maxlength="50">
                                <small class="form-text text-muted">Mã duy nhất, không trùng lặp</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Tên chủ vườn <span class="text-danger">*</span></label>
                                <input type="text" id="farmerName" class="form-control" required maxlength="200">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Đại lý <span class="text-danger">*</span></label>
                                <select id="agentCode" class="form-control" required>
                                    <option value="">-- Chọn đại lý --</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Row 2: Contact Info -->
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Số điện thoại</label>
                                <input type="tel" id="farmPhone" class="form-control" maxlength="20">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Chứng chỉ</label>
                                <input type="text" id="certificates" class="form-control" maxlength="200" placeholder="VD: VietGAP, FSC...">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Trạng thái</label>
                                <select id="isActive" class="form-control">
                                    <option value="true">Đã duyệt</option>
                                    <option value="false">Chưa duyệt</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Row 3: Address -->
                    <div class="form-group">
                        <label>Địa chỉ</label>
                        <textarea id="farmAddress" class="form-control" rows="2" maxlength="500"></textarea>
                    </div>

                    <!-- Row 4: Area Info -->
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Tổng diện tích (ha)</label>
                                <input type="number" id="totalAreaHa" class="form-control" step="0.01" min="0" max="10000" placeholder="0.00">
                                <small class="form-text text-muted">Diện tích toàn bộ vườn</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Diện tích mủ (ha)</label>
                                <input type="number" id="rubberAreaHa" class="form-control" step="0.01" min="0" max="10000" placeholder="0.00">
                                <small class="form-text text-muted">Diện tích cây cao su khai thác</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Sản lượng khai thác (kg/năm)</label>
                                <input type="number" id="totalExploit" class="form-control" step="0.01" min="0" max="1000000" placeholder="0.00">
                                <small class="form-text text-muted">Sản lượng mủ dự kiến/năm</small>
                            </div>
                        </div>
                    </div>

                    <!-- Row 5: Map -->
                    <div class="form-group">
                        <label>Vùng vườn (WKT)</label>
                        <textarea id="polygon" class="form-control" rows="3" placeholder="POLYGON((...))" readonly></textarea>
                        <small class="form-text text-muted">
                            <button type="button" class="btn btn-sm btn-info" id="btnDrawPolygon">
                                <i class="fas fa-map"></i> Vẽ trên bản đồ
                            </button>
                            <button type="button" class="btn btn-sm btn-warning" id="btnClearPolygon">
                                <i class="fas fa-eraser"></i> Xóa vùng
                            </button>
                            <button type="button" class="btn btn-sm btn-success" id="btnImportPolygon">
                                <i class="fas fa-file-import"></i> Import từ file
                            </button>
                        </small>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="fas fa-times"></i> Đóng
                </button>
                <button type="button" id="btnSave" class="btn btn-primary">
                    <i class="fas fa-save"></i> Lưu
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa nhà vườn này?</p>
                <p class="text-danger"><strong>Lưu ý:</strong> Không thể xóa nhà vườn đã có dữ liệu thu mua!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <button type="button" id="btnConfirmDelete" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Xóa
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Map Modal for Drawing Polygon -->
<div class="modal fade" id="mapModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Vẽ vùng vườn</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="map" style="width: 100%; height: 500px;"></div>
                <small class="text-muted">Click để vẽ vùng vườn cao su của nhà vườn</small>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" id="btnSavePolygon" class="btn btn-primary">
                    <i class="fas fa-save"></i> Lưu vùng
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Modal -->
<div class="modal fade" id="statsModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">Thống kê nhà vườn</h5>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h3 id="statTotalFarms">0</h3>
                                <p>Tổng số vườn</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h3 id="statActiveFarms">0</h3>
                                <p>Đã duyệt</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body text-center">
                                <h3 id="statInactiveFarms">0</h3>
                                <p>Chưa duyệt</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body text-center">
                                <h3 id="statNewFarms">0</h3>
                                <p>Mới tháng này</p>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row mt-3">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <h4 id="statTotalArea">0</h4>
                                <p>Tổng DT (ha)</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <h4 id="statRubberArea">0</h4>
                                <p>DT mủ (ha)</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <h4 id="statTotalExploit">0</h4>
                                <p>Sản lượng (tấn)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript" src="~/Contents/js/geoMap.js"></script>
    <script type="text/javascript" src="~/Contents/js/Farm/Farm.js"></script>
}